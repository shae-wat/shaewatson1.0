{
  "extends": [
    # "eslint-config-clara",
    "eslint-config-prettier",
    "eslint-config-prettier/react"
  ],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "jest": true
  },
  "plugins": ["eslint-plugin-prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      { "trailingComma": "all", "singleQuote": true, "semi": false }
    ],
    "semi": ["error", "never"],
    "no-else-return": ["off"],
    "new-cap": ["off"],
    "no-unused-vars": [
      "error",
      {
        "vars": "all",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-restricted-globals": ["error", "find"]
  }
}
